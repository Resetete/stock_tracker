<div class="row">
  <div class="col-10">
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th scope="col"> Ticker </th>
          <th scope="col"> Name </th>
          <th scope="col"> Bought on </th>
          <th scope="col"> Invested €</th>
          <th scope="col"> Current profit € </th>
          <th scope="col"> Last updated </th>
          <th scope="col"> Actions </th>
        </tr>
      </thead>
      <tbody>
        <% @wallets.each do |wallet| %>
        <tr>
          <th scope="row"> <%= wallet.ticker %> </th>
          <td> <%= wallet.name %> </td>
          <td> <%= wallet.buy_date.strftime("%Y-%m-%d") if wallet.buy_date %> </td>
          <td> <%= wallet.amount_bought %> </td>
          <td> <% if !wallet.current_profit.nil? %>
                  <%= wallet.current_profit %>
              <% else %>
                  <p class="badge badge-warning"> Error, please try again </p>
              <% end %>
          </td>
          <td> <%= time_ago_in_words(wallet.updated_at) %> ago </td>
          <td>
            <%= link_to 'Edit', edit_wallet_path(wallet), class: 'badge' %>
            |
            <%= link_to 'Sold?', '#', class: 'badge' %>
            |
            <%= link_to 'Update current profit', '#', class: 'badge' %>
           </td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <%= link_to 'Add new', new_wallet_path, class: 'btn btn-info mb-5' %>
  </div>
</div>
